  gap: 6px;
}

.empty-state {
  text-align: center;
  padding: 80px 20px;
  
  .empty-icon {
    font-size: 64px;
    margin-bottom: 20px;
    opacity: 0.5;
  }

  h2 {
    font-size: 28px;
    margin: 0 0 12px 0;
